<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchResult">

    <ImageView
        android:id="@+id/imageFoodCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="22dp"
        app:layout_constraintEnd_toStartOf="@+id/textViewFoodNameCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textViewFoodNameCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="24dp"
        android:text="Food Name"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/imageFoodCard"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewFoodRatingCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="12dp"
        android:text="Ratings"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/imageFoodCard"
        app:layout_constraintTop_toBottomOf="@+id/textViewFoodNameCard" />

    <TextView
        android:id="@+id/textViewFoodPriceCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="6dp"
        android:text="Price"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@+id/imageFoodCard"
        app:layout_constraintTop_toBottomOf="@+id/textViewFoodRatingCard" />

    <Button
        android:id="@+id/btnAddToCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="24dp"
        android:text="Add"
        app:layout_constraintStart_toEndOf="@+id/textViewFoodRatingCard"
        app:layout_constraintTop_toBottomOf="@+id/textViewFoodNameCard" />





</androidx.constraintlayout.widget.ConstraintLayout>